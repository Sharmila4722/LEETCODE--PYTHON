class Solution(object):
    def climbStairs(self, n):
        """
        :type n: int
        :rtype: int
        """
        if n <= 2:
            return n
        
        a, b = 1, 2  # ways to reach step 1 and 2
        for i in range(3, n + 1):
            c = a + b
            a = b
            b = c
        return b

